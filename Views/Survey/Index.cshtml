@model List<SurveyListItemViewModel>
@{
    ViewData["Title"] = "Lista ankiet";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2><i class="bi bi-list-task"></i> Lista ankiet</h2>
    @if (User.IsInRole("Ankieter"))
    {
        <a asp-action="Create" class="btn btn-success">
            <i class="bi bi-plus-circle"></i> Nowa ankieta
        </a>
    }
</div>

@if (!Model.Any())
{
    <div class="alert alert-info">
        <i class="bi bi-info-circle"></i> Brak dostępnych ankiet.
    </div>
}
else
{
    <div class="row g-4">
        @foreach (var survey in Model)
        {
            <div class="col-md-6 col-lg-4">
                <div class="card h-100">
                    <div class="card-body d-flex flex-column">
                        <div class="d-flex justify-content-between align-items-start mb-2">
                            <h5 class="card-title mb-0">@survey.Title</h5>
                            @if (survey.IsActive)
                            {
                                <span class="badge bg-success">Aktywna</span>
                            }
                            else
                            {
                                <span class="badge bg-secondary">Zamknięta</span>
                            }
                        </div>

                        @if (!string.IsNullOrEmpty(survey.Description))
                        {
                            <p class="card-text text-muted small">@survey.Description</p>
                        }

                        <div class="text-muted small mb-3 mt-auto">
                            <i class="bi bi-list-check"></i> @survey.OptionCount opcji &nbsp;|&nbsp;
                            <i class="bi bi-people"></i> @survey.TotalVotes głosów &nbsp;|&nbsp;
                            <i class="bi bi-calendar"></i> @survey.CreatedAt.ToString("dd.MM.yyyy")
                        </div>

                        <div class="d-flex gap-2">
                            @if (survey.HasVoted || User.IsInRole("Ankieter"))
                            {
                                <a asp-action="Results" asp-route-id="@survey.Id" class="btn btn-info btn-sm flex-fill">
                                    <i class="bi bi-bar-chart"></i> Wyniki
                                </a>
                            }

                            @if (!survey.HasVoted && survey.IsActive && !User.IsInRole("Ankieter"))
                            {
                                <a asp-controller="Vote" asp-action="Cast" asp-route-id="@survey.Id"
                                   class="btn btn-primary btn-sm flex-fill">
                                    <i class="bi bi-check2-circle"></i> Głosuj
                                </a>
                            }

                            @if (survey.HasVoted && !User.IsInRole("Ankieter"))
                            {
                                <span class="btn btn-outline-secondary btn-sm flex-fill disabled">
                                    <i class="bi bi-check-lg"></i> Oddano głos
                                </span>
                            }

                            @if (User.IsInRole("Ankieter"))
                            {
                                <a asp-action="Votes" asp-route-id="@survey.Id" class="btn btn-outline-dark btn-sm">
                                    <i class="bi bi-eye"></i> Głosy
                                </a>
                                <a asp-action="Delete" asp-route-id="@survey.Id" class="btn btn-outline-danger btn-sm">
                                    <i class="bi bi-trash"></i>
                                </a>
                            }
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
}
