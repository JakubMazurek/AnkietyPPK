@model Survey
@{
    ViewData["Title"] = "Głosy — " + Model.Title;
}

<div class="row justify-content-center">
    <div class="col-md-10">
        <div class="card">
            <div class="card-header bg-dark text-white">
                <h4 class="mb-0"><i class="bi bi-eye"></i> Lista głosów: @Model.Title</h4>
            </div>
            <div class="card-body">
                @{
                    var allVotes = Model.Options
                        .SelectMany(o => o.Votes.Select(v => new { Option = o.Text, v.RespondentUserId, v.VotedAt }))
                        .OrderByDescending(v => v.VotedAt)
                        .ToList();
                }

                @if (!allVotes.Any())
                {
                    <div class="alert alert-info">
                        <i class="bi bi-info-circle"></i> Brak głosów w tej ankiecie.
                    </div>
                }
                else
                {
                    <p class="text-muted mb-3">Łącznie głosów: <strong>@allVotes.Count</strong></p>

                    <div class="table-responsive">
                        <table class="table table-striped table-hover">
                            <thead class="table-dark">
                                <tr>
                                    <th>#</th>
                                    <th>Respondent (ID)</th>
                                    <th>Wybrana opcja</th>
                                    <th>Data głosu</th>
                                </tr>
                            </thead>
                            <tbody>
                                @{ int idx = 1; }
                                @foreach (var vote in allVotes)
                                {
                                    <tr>
                                        <td>@idx</td>
                                        <td><code>@vote.RespondentUserId</code></td>
                                        <td>@vote.Option</td>
                                        <td>@vote.VotedAt.ToString("dd.MM.yyyy HH:mm")</td>
                                    </tr>
                                    idx++;
                                }
                            </tbody>
                        </table>
                    </div>
                }

                <a asp-action="Index" class="btn btn-outline-secondary mt-3">
                    <i class="bi bi-arrow-left"></i> Wróć do listy
                </a>
            </div>
        </div>
    </div>
</div>
